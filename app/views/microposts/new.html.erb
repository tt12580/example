<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@micropost) do |f| %>
        <%= f.input :content %>
        <%= f.input :picture, label: false %>
        <%= link_to 'Back',root_path(f), class:'btn btn-primary' %>
        <%= f.button :submit, class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
