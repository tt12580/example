  <div class="row">
    <div class="col-md-8 col-md-offset-3">
      <%= form_tag admin_microposts_path, method: :get do %>
        <%= label_tag :content %>
        <%= text_field_tag :content %>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
        <%= label_tag :id %>
        <%= text_field_tag :id%>
        <%= submit_tag 'search' %>
      <% end %>
      <%= will_paginate %>
      <% if @microposts.any? %>
        <ol>
          <%= render @microposts %>
        </ol>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
